<div class="header-wrap">
	<header class="template-header container">
		<div class="row">
			<div class="header-title span-5">
				{{widget('logo', 'headerlogo', {"defaultlogo": asset('images/logo.png')})|raw}}
				{{widget('companyname', 'headercompanyname', {"business": "FAABER"})|raw}}
			</div>
			<nav class="template-nav span-4">
				{{widget('extendednavigation', 'headernavigationheader', {"align":"left"})|raw}}
			</nav>
			<aside class="template-social span-3">
				{{widget('content', 'headercontent', {"content":"<p>Lorem Ipsum</p>"})|raw}}
				{{widget('profile', 'headerprofilesocialicons', { 'profileType' : 'socialicons' })|raw}}
			</aside>
		</div>
	</header>
</div>